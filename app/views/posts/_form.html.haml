.container
  .row.justify-content-center
    .col-md-8
      = form_for(post) do |f|
        %h2= 'Submit a post'
        .row
          .col-md-1
            = image_tag(current_user.image_url)
          .col-md-11
            .form-group
              = f.text_field :title, class: post_input_class(post, :title), placeholder: 'Title'
              = render "field_error", post: post, attribute_name: :title
            .form-group
              = f.text_area :content, class: post_input_class(post, :content), style: 'min-height: 200px;', placeholder: 'Type your content here, including links. At least, explain the content around your link in a single paragraph.'
              = render "field_error", post: post, attribute_name: :content
            %small.form-text.text-muted
              = 'You can use Markdown.'
              %br/
              = 'Note that your post may be edited to suit the format of the site.'
            = f.submit 'Save', class: 'btn'
